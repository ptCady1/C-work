@model CountryViewModel
@{
    ViewData["Title"] = "Olympic Countries";
}

<div class="row">
    <div class="col-md-3">
        <h3 class="mt-3">Games</h3>
        <div class="list-group">
            <a asp-action="Index" asp-route-activeConf="all" asp-route-activeDiv="@Model.ActiveDiv"
            class="list-group-item @Model.CheckActiveConf("all")">
        All
        </a>

            @foreach (Games gam in Model.Game)
            {
                <a asp-action="Index" asp-route-activeConf="@gam.GamesID" asp-route-activeDiv="@Model.ActiveDiv"
                   class="list-group-item @Model.CheckActiveConf(gam.GamesID)">
                    @gam.Name
                </a>
            }
        </div>
        <h3 class="mt-3">Sport/Type</h3>
        <div class="list-group">
            <a asp-action="Index" asp-route-activeConf="@Model.ActiveConf" asp-route-activeDiv="all"
               class="list-group-item @Model.CheckActiveConf("all")">
                All
            </a>

            @foreach (SportType st in Model.SportsTypes)
            {
                <a asp-action="Index" asp-route-activeConf="@Model.ActiveConf" asp-route-activeDiv="@st.SportTypeID"
                   class="list-group-item @Model.CheckActiveConf(@st.SportTypeID)">
                    @st.SportName
                </a>
            }
        </div>
    </div>
    <div class="col-md-9">
        <ul class="list-inline">
            @foreach (Country country in Model.Countries)
            {
                <li class="list-inline-item">
                    <a asp-action="Details" asp-route-id="@country.countryID">
                    <img src="~/Images/@country.Flag" alt="@country.countryName" title="@country.countryName | 
                    @country.Games.Name @country.SportType.SportName" />
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
